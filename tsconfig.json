{
  "compilerOptions": {
    // required
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "downlevelIteration": true,
    "module": "CommonJS",
    "noLib": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": ["node_modules/@rbxts"],

    // required, configurable
    "rootDir": "typings",
    "outDir": "out",

    // optional
    "declaration": true,

    // optional, non-configurable
    "jsx": "react",
    "jsxFactory": "Roact.createElement"
  },
  "exclude": ["docs/**/*"]
}
